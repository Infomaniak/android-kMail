<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sync_auto_config_navigation"
    app:startDestination="@id/syncOnboardingFragment">

    <fragment
        android:id="@+id/syncOnboardingFragment"
        android:name="com.infomaniak.mail.ui.sync.SyncOnboardingFragment"
        android:label="SyncOnboardingFragment"
        tools:layout="@layout/fragment_sync_onboarding">
        <action
            android:id="@+id/action_syncOnboardingFragment_to_syncInstallFragment"
            app:destination="@id/syncInstallFragment" />
        <action
            android:id="@+id/action_syncOnboardingFragment_to_syncStartFragment"
            app:destination="@id/syncStartFragment" />
    </fragment>

    <fragment
        android:id="@+id/syncInstallFragment"
        android:name="com.infomaniak.mail.ui.sync.SyncInstallFragment"
        android:label="SyncInstallFragment"
        tools:layout="@layout/fragment_sync_install">
        <action
            android:id="@+id/action_syncInstallFragment_to_syncStartFragment"
            app:destination="@id/syncStartFragment" />
    </fragment>

    <fragment
        android:id="@+id/syncStartFragment"
        android:name="com.infomaniak.mail.ui.sync.SyncStartFragment"
        android:label="SyncStartFragment"
        tools:layout="@layout/fragment_sync_start" />

</navigation>
