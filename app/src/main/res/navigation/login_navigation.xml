<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.infomaniak.mail.ui.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_newAccountFragment"
            app:destination="@id/newAccountFragment" />
        <action
            android:id="@+id/action_loginFragment_to_crossLoginBottomSheetDialog"
            app:destination="@id/crossLoginBottomSheetDialog" />
    </fragment>

    <fragment
        android:id="@+id/newAccountFragment"
        android:name="com.infomaniak.mail.ui.login.NewAccountFragment"
        android:label="NewAccountFragment"
        tools:layout="@layout/fragment_new_account" />

    <fragment
        android:id="@+id/introFragment"
        android:name="com.infomaniak.mail.ui.login.IntroFragment"
        android:label="IntroFragment"
        tools:layout="@layout/fragment_intro">
        <argument
            android:name="isFirstAccount"
            app:argType="boolean" />
        <argument
            android:name="position"
            app:argType="integer" />
    </fragment>

    <dialog
        android:id="@+id/crossLoginBottomSheetDialog"
        android:name="com.infomaniak.mail.ui.login.CrossLoginBottomSheetDialog"
        android:label="CrossLoginBottomSheetDialog"
        tools:layout="@layout/bottom_sheet_cross_login" />

</navigation>
