<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button1"
        style="@style/IconButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorPrimaryContainer"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="20dp"
        app:cornerRadius="8dp"
        app:iconSize="30dp"
        app:iconTint="?android:attr/colorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:icon="@drawable/ic_email_action_reply" />

    <TextView
        android:id="@+id/textView1"
        style="@style/CaptionMedium.Accent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/marginStandardSmall"
        app:layout_constraintEnd_toEndOf="@id/button1"
        app:layout_constraintStart_toStartOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/button1"
        tools:text="@string/actionReply" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2"
        style="@style/IconButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="?attr/colorPrimaryContainer"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="20dp"
        app:cornerRadius="8dp"
        app:iconSize="30dp"
        app:iconTint="?android:attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/button1"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toTopOf="parent"
        tools:icon="@drawable/ic_email_action_reply_to_all" />

    <TextView
        android:id="@+id/textView2"
        style="@style/CaptionMedium.Accent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/marginStandardSmall"
        app:layout_constraintEnd_toEndOf="@id/button2"
        app:layout_constraintStart_toStartOf="@id/button2"
        app:layout_constraintTop_toBottomOf="@id/button2"
        tools:text="@string/actionReplyAll" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button3"
        style="@style/IconButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="?attr/colorPrimaryContainer"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="20dp"
        app:cornerRadius="8dp"
        app:iconSize="30dp"
        app:iconTint="?android:attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/button1"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/button4"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="parent"
        tools:icon="@drawable/ic_email_action_send" />

    <TextView
        android:id="@+id/textView3"
        style="@style/CaptionMedium.Accent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/marginStandardSmall"
        app:layout_constraintEnd_toEndOf="@id/button3"
        app:layout_constraintStart_toStartOf="@id/button3"
        app:layout_constraintTop_toBottomOf="@id/button3"
        tools:text="@string/actionForward" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button4"
        style="@style/IconButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="?attr/colorPrimaryContainer"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="20dp"
        app:cornerRadius="8dp"
        app:iconSize="30dp"
        app:iconTint="?android:attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/button1"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="parent"
        tools:icon="@drawable/ic_bin" />

    <TextView
        android:id="@+id/textView4"
        style="@style/CaptionMedium.Accent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/marginStandardSmall"
        app:layout_constraintEnd_toEndOf="@id/button4"
        app:layout_constraintStart_toStartOf="@id/button4"
        app:layout_constraintTop_toBottomOf="@id/button4"
        tools:text="@string/actionDelete" />

</androidx.constraintlayout.widget.ConstraintLayout>
