<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.settings.send.SendSettingsFragment"
    tools:ignore="ContentDescription,UseCompoundDrawables">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                style="@style/H2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/marginStandardMedium"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="@string/settingsSendTitle" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/settingsCancellationPeriod"
                style="@style/MenuDrawerItem">

                <LinearLayout style="@style/Setting2TextsWithButton">

                    <TextView
                        style="@style/SettingText1Of2WithButton"
                        android:text="@string/settingsCancellationPeriodTitle" />

                    <TextView
                        style="@style/SettingText2Of2WithButton"
                        android:text="@string/settingsDisabled" />
                </LinearLayout>

                <ImageView style="@style/SettingButtonChevron" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider style="@style/SettingSeparator" />

            <LinearLayout
                android:id="@+id/settingsTransferEmails"
                style="@style/MenuDrawerItem">

                <LinearLayout style="@style/Setting2TextsWithButton">

                    <TextView
                        style="@style/SettingText1Of2WithButton"
                        android:text="@string/settingsTransferEmailsTitle" />

                    <TextView
                        style="@style/SettingText2Of2WithButton"
                        android:text="@string/settingsTransferInBody" />
                </LinearLayout>

                <ImageView style="@style/SettingButtonChevron" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider style="@style/SettingSeparator" />

            <LinearLayout
                android:id="@+id/settingsSendIncludeOriginalMessage"
                style="@style/MenuDrawerItem">

                <TextView
                    style="@style/SettingTextWithButton"
                    android:text="@string/settingsSendIncludeOriginalMessage" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/settingsSendIncludeOriginalMessageSwitch"
                    style="@style/SettingButtonSwitch" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider style="@style/SettingSeparator" />

            <LinearLayout
                android:id="@+id/settingsSendAcknowledgement"
                style="@style/MenuDrawerItem">

                <TextView
                    style="@style/SettingTextWithButton"
                    android:text="@string/settingsSendAcknowledgement" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/settingsSendAcknowledgementSwitch"
                    style="@style/SettingButtonSwitch" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
