<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addressItemView"
    style="@style/MenuDrawerItem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/marginStandardSmall"
        android:layout_marginEnd="@dimen/marginStandard"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/itemName"
            style="@style/MenuDrawerItemText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            tools:text="Folder (Default/Custom)" />

        <TextView
            android:id="@+id/itemBadge"
            style="@style/MenuDrawerBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="99+" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
