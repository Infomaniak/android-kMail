<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.settings.SettingsFragment"
    tools:ignore="ContentDescription,UseCompoundDrawables">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                style="@style/H2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/marginStandardMedium"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="@string/settingsTitle" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.card.MaterialCardView
        style="@style/BackgroundCardview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/SettingHeader"
                    android:text="@string/settingsSectionEmailAddresses" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mailboxesList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_settings_mailbox" />

                <com.google.android.material.divider.MaterialDivider style="@style/SettingSeparator" />

                <TextView
                    style="@style/SettingHeader"
                    android:text="@string/settingsSectionGeneral" />

                <LinearLayout
                    android:id="@+id/settingsSend"
                    style="@style/MenuDrawerItem">

                    <TextView
                        style="@style/SettingTextWithButton"
                        android:text="@string/settingsSendTitle" />

                    <ImageView style="@style/SettingButtonChevron" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settingsAppLock"
                    style="@style/MenuDrawerItem">

                    <TextView
                        style="@style/SettingTextWithButton"
                        android:text="@string/settingsAppLock" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/settingsAppLockSwitch"
                        style="@style/SettingButtonSwitch" />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider style="@style/SettingSeparator" />

                <TextView
                    style="@style/SettingHeader"
                    android:text="@string/settingsSectionAppearance" />

                <LinearLayout
                    android:id="@+id/settingsThreadListDensity"
                    style="@style/MenuDrawerItem">

                    <LinearLayout style="@style/Setting2TextsWithButton">

                        <TextView
                            style="@style/SettingText1Of2WithButton"
                            android:text="@string/settingsThreadListDensityTitle" />

                        <TextView
                            android:id="@+id/densitySubtitle"
                            style="@style/SettingText2Of2WithButton"
                            android:text="@string/settingsDefault" />
                    </LinearLayout>

                    <ImageView style="@style/SettingButtonChevron" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settingsTheme"
                    style="@style/MenuDrawerItem">

                    <LinearLayout style="@style/Setting2TextsWithButton">

                        <TextView
                            style="@style/SettingText1Of2WithButton"
                            android:text="@string/settingsTheme" />

                        <TextView
                            android:id="@+id/themeSubtitle"
                            style="@style/SettingText2Of2WithButton"
                            android:text="@string/settingsOptionSystemTheme" />
                    </LinearLayout>

                    <ImageView style="@style/SettingButtonChevron" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settingsAccentColor"
                    style="@style/MenuDrawerItem">

                    <LinearLayout style="@style/Setting2TextsWithButton">

                        <TextView
                            style="@style/SettingText1Of2WithButton"
                            android:text="@string/settingsAccentColor" />

                        <TextView
                            android:id="@+id/accentColorSubtitle"
                            style="@style/SettingText2Of2WithButton"
                            android:text="@string/accentColorPinkTitle" />
                    </LinearLayout>

                    <ImageView style="@style/SettingButtonChevron" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settingsSwipeActions"
                    style="@style/MenuDrawerItem">

                    <TextView
                        style="@style/SettingTextWithButton"
                        android:text="@string/settingsSwipeActionsTitle" />

                    <ImageView style="@style/SettingButtonChevron" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settingsMessageDisplay"
                    style="@style/MenuDrawerItem">

                    <LinearLayout style="@style/Setting2TextsWithButton">

                        <TextView
                            style="@style/SettingText1Of2WithButton"
                            android:text="@string/settingsMessageDisplayTitle" />

                        <TextView
                            android:id="@+id/displayModeSubtitle"
                            style="@style/SettingText2Of2WithButton"
                            android:text="@string/settingsOptionDiscussions" />
                    </LinearLayout>

                    <ImageView style="@style/SettingButtonChevron" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settingsExternalContent"
                    style="@style/MenuDrawerItem">

                    <LinearLayout style="@style/Setting2TextsWithButton">

                        <TextView
                            style="@style/SettingText1Of2WithButton"
                            android:text="@string/settingsExternalContentTitle" />

                        <TextView
                            android:id="@+id/externalContentSubtitle"
                            style="@style/SettingText2Of2WithButton"
                            android:text="@string/settingsOptionAskMe" />
                    </LinearLayout>

                    <ImageView style="@style/SettingButtonChevron" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
