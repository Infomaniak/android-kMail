<com.infomaniak.mail.ui.main.menu.SimpleSettingView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:title="@string/settingsMatomoTitle">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_matomo_text" />

            <TextView
                style="@style/Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dividerHorizontalPadding"
                android:text="@string/settingsMatomoDescription" />

            <com.infomaniak.mail.ui.main.settings.ItemSettingView
                android:id="@+id/settingsTrackingSwitchMatomo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemAction="toggle"
                app:title="@string/settingsAuthorizeTracking" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</com.infomaniak.mail.ui.main.menu.SimpleSettingView>
