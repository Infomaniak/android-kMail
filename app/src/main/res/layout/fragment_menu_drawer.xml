<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/drawerHeader"
            style="@style/CardViewMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginStandardSmall"
            app:cardElevation="6dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/marginStandardMedium"
                android:layout_marginTop="@dimen/marginStandardMedium"
                android:layout_marginBottom="@dimen/marginStandardSmall"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/appNameFull"
                    android:src="@drawable/ic_logo_infomaniak_mail"
                    app:layout_constraintStart_toStartOf="parent" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/settingsButton"
                    style="@style/IconButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/contentDescriptionButtonSettings"
                    app:icon="@drawable/ic_cog"
                    app:iconSize="24dp"
                    app:iconTint="@color/infomaniak"
                    app:layout_constraintEnd_toEndOf="parent" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/accountSwitcher"
            style="@style/MenuDrawerItem"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/accountSwitcherText"
                style="@style/Callout.Highlighted.Strong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Myriam.rais@infomaniak.com" />

            <ImageView
                android:id="@+id/expandAccountButton"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:contentDescription="@string/contentDescriptionButtonExpandAccountSelection"
                android:src="@drawable/ic_arrow_down" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginStandardVerySmall"
            android:overScrollMode="never"
            android:paddingHorizontal="@dimen/marginStandardMedium"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/item_setting_address"
            tools:visibility="visible" />

        <com.google.android.material.divider.MaterialDivider
            style="@style/MenuDrawerDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/inboxFolder"
            style="@style/MenuDrawerItem">

            <TextView
                android:id="@+id/inboxFolderText"
                style="@style/MenuDrawerItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/inboxFolder"
                app:drawableStartCompat="@drawable/ic_drawer_mailbox" />

            <TextView
                android:id="@+id/inboxFolderBadge"
                style="@style/MenuDrawerBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15" />

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            style="@style/MenuDrawerDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/commercialFolder"
            style="@style/MenuDrawerItem"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/commercialFolderText"
                style="@style/MenuDrawerItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/commercialFolder"
                app:drawableStartCompat="@drawable/ic_promotions" />

            <TextView
                android:id="@+id/commercialFolderBadge"
                style="@style/MenuDrawerBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/socialNetworksFolder"
            style="@style/MenuDrawerItem"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/socialNetworksFolderText"
                style="@style/MenuDrawerItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/socialNetworksFolder"
                app:drawableStartCompat="@drawable/ic_social_media" />

            <TextView
                android:id="@+id/socialNetworksFolderBadge"
                style="@style/MenuDrawerBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/favoriteFolder"
            style="@style/MenuDrawerItem"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/favoriteFolderText"
                style="@style/MenuDrawerItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/favoritesFolder"
                app:drawableStartCompat="@drawable/ic_star"
                app:drawableTint="@color/primary" />

            <TextView
                android:id="@+id/favoriteFolderBadge"
                style="@style/MenuDrawerBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sentFolder"
            style="@style/MenuDrawerItem">

            <TextView
                android:id="@+id/sentFolderText"
                style="@style/MenuDrawerItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sentFolder"
                app:drawableStartCompat="@drawable/ic_sent_messages" />

            <TextView
                android:id="@+id/sentFolderBadge"
                style="@style/MenuDrawerBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/scheduledMessagesFolder"
            style="@style/MenuDrawerItem"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/scheduledMessagesFolderText"
                style="@style/MenuDrawerItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/scheduledMessagesFolder"
                app:drawableStartCompat="@drawable/ic_scheduled_messages"
                app:drawableTint="@color/primary" />

            <TextView
                android:id="@+id/scheduledMessagesFolderBadge"
                style="@style/MenuDrawerBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pendingMessagesFolder"
            style="@style/MenuDrawerItem"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/pendingMessagesFolderText"
                style="@style/MenuDrawerItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pendingMessagesFolder"
                app:drawableStartCompat="@drawable/ic_pending_messages"
                app:drawableTint="@color/primary" />

            <TextView
                android:id="@+id/pendingMessagesFolderBadge"
                style="@style/MenuDrawerBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/draftFolder"
            style="@style/MenuDrawerItem">

            <TextView
                android:id="@+id/draftFolderText"
                style="@style/MenuDrawerItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/draftFolder"
                app:drawableStartCompat="@drawable/ic_edit_draft" />

            <TextView
                android:id="@+id/draftFolderBadge"
                style="@style/MenuDrawerBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/spamFolder"
            style="@style/MenuDrawerItem">


            <TextView
                android:id="@+id/spamFolderText"
                style="@style/MenuDrawerItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/spamFolder"
                app:drawableStartCompat="@drawable/ic_spam" />

            <TextView
                android:id="@+id/spamFolderBadge"
                style="@style/MenuDrawerBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/trashFolder"
            style="@style/MenuDrawerItem">

            <TextView
                android:id="@+id/trashFolderText"
                style="@style/MenuDrawerItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/trashFolder"
                app:drawableStartCompat="@drawable/ic_bin" />

            <TextView
                android:id="@+id/trashFolderBadge"
                style="@style/MenuDrawerBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="99+" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/archiveFolder"
            style="@style/MenuDrawerItem">

            <TextView
                android:id="@+id/archiveFolderText"
                style="@style/MenuDrawerItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/archiveFolder"
                app:drawableStartCompat="@drawable/ic_archive_folder" />

            <TextView
                android:id="@+id/archiveFolderBadge"
                style="@style/MenuDrawerBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="15" />

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            style="@style/MenuDrawerDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/customFolders"
            style="@style/MenuDrawerItem"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonFolders" />

            <ImageView
                android:id="@+id/expandCustomFolderButton"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:contentDescription="@string/contentDescriptionButtonExpandCustomFolders"
                android:src="@drawable/ic_arrow_down" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/customFoldersList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.google.android.material.divider.MaterialDivider
            style="@style/MenuDrawerDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/feedbacks"
            style="@style/MenuDrawerItem">

            <TextView
                style="@style/MenuDrawerItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonFeedbacks"
                app:drawableStartCompat="@drawable/ic_feedbacks" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/help"
            style="@style/MenuDrawerItem">

            <TextView
                style="@style/MenuDrawerItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonHelp"
                app:drawableStartCompat="@drawable/ic_help" />

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            style="@style/MenuDrawerDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/Callout.Tertiary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/marginStandard"
            android:paddingVertical="@dimen/marginStandardSmall"
            android:text="@string/menuDrawerAdvancedActions" />

        <LinearLayout
            android:id="@+id/importMails"
            style="@style/MenuDrawerItem">

            <TextView
                style="@style/MenuDrawerItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonImportEmails"
                app:drawableStartCompat="@drawable/ic_drawer_download" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/restoreMails"
            style="@style/MenuDrawerItem">

            <TextView
                style="@style/MenuDrawerItemText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonRestoreEmails"
                app:drawableStartCompat="@drawable/ic_restore_arrow" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
