<com.infomaniak.mail.ui.main.menu.SimpleSettingView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:title="@string/settingsSwipeActionsTitle"
    tools:context=".ui.main.settings.ThemeSettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:orientation="vertical">

        <TextView
            style="@style/SettingHeader"
            android:layout_marginTop="@dimen/marginStandardMedium"
            android:text="@string/settingsSwipeDescription" />

        <com.infomaniak.mail.ui.main.settings.ItemSettingView
            android:id="@+id/swipeRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_swipe_right_long_pink"
            app:itemAction="chevron"
            app:title="@string/settingsSwipeLongRight"
            tools:subtitle="@string/settingsSwipeActionNone" />

        <include
            android:id="@+id/swipeRightIllustration"
            layout="@layout/swipe_right_illustration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.divider.MaterialDivider style="@style/SettingSeparator" />

        <com.infomaniak.mail.ui.main.settings.ItemSettingView
            android:id="@+id/swipeLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_swipe_left_long_pink"
            app:itemAction="chevron"
            app:title="@string/settingsSwipeLongLeft"
            tools:subtitle="@string/settingsSwipeActionNone" />

        <include
            android:id="@+id/swipeLeftIllustration"
            layout="@layout/swipe_left_illustration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</com.infomaniak.mail.ui.main.menu.SimpleSettingView>

