<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.settings.swipe.SwipeActionsSettingsFragment"
    tools:ignore="ContentDescription,UseCompoundDrawables">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/H2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginStandardMedium"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="@string/settingsSwipeActionsTitle" />

    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/SettingHeader"
                android:text="@string/settingsSwipeDescription" />

            <LinearLayout
                android:id="@+id/settingsSwipeShortRight"
                style="@style/MenuDrawerItem">

                <ImageView
                    style="@style/SettingImageAtStart"
                    android:layout_width="32dp"
                    android:src="@drawable/ic_swipe_right_short_pink" />

                <LinearLayout style="@style/Setting2TextsWithButton">

                    <TextView
                        style="@style/SettingText1Of2WithButton"
                        android:text="@string/settingsSwipeShortRight" />

                    <TextView
                        android:id="@+id/settingsSwipeShortRightText"
                        style="@style/SettingText2Of2WithButton"
                        tools:text="@string/settingsSwipeActionNone" />
                </LinearLayout>

                <ImageView style="@style/SettingButtonChevron" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settingsSwipeLongRight"
                style="@style/MenuDrawerItem">

                <ImageView
                    style="@style/SettingImageAtStart"
                    android:layout_width="32dp"
                    android:src="@drawable/ic_swipe_right_long_pink" />

                <LinearLayout style="@style/Setting2TextsWithButton">

                    <TextView
                        style="@style/SettingText1Of2WithButton"
                        android:text="@string/settingsSwipeLongRight" />

                    <TextView
                        android:id="@+id/settingsSwipeLongRightText"
                        style="@style/SettingText2Of2WithButton"
                        tools:text="@string/settingsSwipeActionNone" />
                </LinearLayout>

                <ImageView style="@style/SettingButtonChevron" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider style="@style/SettingSeparator" />

            <LinearLayout
                android:id="@+id/settingsSwipeShortLeft"
                style="@style/MenuDrawerItem">

                <ImageView
                    style="@style/SettingImageAtStart"
                    android:layout_width="32dp"
                    android:src="@drawable/ic_swipe_left_short_pink" />

                <LinearLayout style="@style/Setting2TextsWithButton">

                    <TextView
                        style="@style/SettingText1Of2WithButton"
                        android:text="@string/settingsSwipeShortLeft" />

                    <TextView
                        android:id="@+id/settingsSwipeShortLeftText"
                        style="@style/SettingText2Of2WithButton"
                        tools:text="@string/settingsSwipeActionNone" />
                </LinearLayout>

                <ImageView style="@style/SettingButtonChevron" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settingsSwipeLongLeft"
                style="@style/MenuDrawerItem">

                <ImageView
                    style="@style/SettingImageAtStart"
                    android:layout_width="32dp"
                    android:src="@drawable/ic_swipe_left_long_pink" />

                <LinearLayout style="@style/Setting2TextsWithButton">

                    <TextView
                        style="@style/SettingText1Of2WithButton"
                        android:text="@string/settingsSwipeLongLeft" />

                    <TextView
                        android:id="@+id/settingsSwipeLongLeftText"
                        style="@style/SettingText2Of2WithButton"
                        tools:text="@string/settingsSwipeActionNone" />
                </LinearLayout>

                <ImageView style="@style/SettingButtonChevron" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
