<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/marginStandardMedium"
    android:paddingBottom="@dimen/marginStandardMedium"
    tools:context=".ui.main.thread.MessageActionsBottomSheetDialog">

    <include layout="@layout/view_bottom_sheet_separator" />

    <TextView
        style="@style/H3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/moreStorageTitle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginStandardMedium"
        android:src="@drawable/ic_convert_mail_quota"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/Body.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginStandardMedium"
        android:text="@string/moreStorageText1" />

    <TextView
        style="@style/Body.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginStandardMedium"
        android:text="@string/moreStorageText2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginStandard"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/closeButton"
            style="@style/TextButtonPrimary.Error"
            android:text="@string/buttonClose"
            android:textColor="@color/red_error" />

        <com.google.android.material.button.MaterialButton
            style="@style/TextButtonPrimary"
            android:layout_marginStart="@dimen/marginStandardSmall"
            android:enabled="false"
            android:text="@string/buttonAvailableSoon" />

    </LinearLayout>

</LinearLayout>
