<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.settings.ExternalContentSettingFragment"
    tools:ignore="ContentDescription,UseCompoundDrawables">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                style="@style/H2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/marginStandardMedium"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="@string/settingsExternalContentTitle" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.card.MaterialCardView
        style="@style/BackdropCardview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/SettingHeader"
                    android:text="@string/settingsSelectDisplayModeDescription" />

                <LinearLayout
                    android:id="@+id/settingsOptionAlways"
                    style="@style/MenuDrawerItem">

                    <TextView
                        style="@style/SettingTextWithButton"
                        android:text="@string/settingsOptionAlways" />

                    <ImageView
                        android:id="@+id/settingsOptionAlwaysCheck"
                        style="@style/SettingButtonCheck"
                        android:visibility="visible" />
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider style="@style/SettingSeparator" />

                <LinearLayout
                    android:id="@+id/settingsOptionAskMe"
                    style="@style/MenuDrawerItem">

                    <TextView
                        style="@style/SettingTextWithButton"
                        android:text="@string/settingsOptionAskMe" />

                    <ImageView
                        android:id="@+id/settingsOptionAskMeCheck"
                        style="@style/SettingButtonCheck"
                        tools:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
