<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.settings.ThemeSettingFragment"
    tools:ignore="ContentDescription,UseCompoundDrawables">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/H2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginStandardMedium"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="@string/settingsThemeChoiceTitle" />

    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/SettingHeader"
                android:text="@string/settingsTheme" />

            <LinearLayout
                android:id="@+id/settingsOptionDefaultTheme"
                style="@style/MenuDrawerItem">

                <ImageView
                    style="@style/SettingImageAtStart"
                    android:src="@drawable/ic_theme_system" />

                <TextView
                    style="@style/SettingTextWithButton"
                    android:text="@string/settingsOptionSystemTheme" />

                <ImageView
                    android:id="@+id/settingsOptionDefaultThemeCheck"
                    style="@style/SettingButtonCheck"
                    android:visibility="visible" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider style="@style/SettingSeparator" />

            <LinearLayout
                android:id="@+id/settingsOptionLightTheme"
                style="@style/MenuDrawerItem">

                <ImageView
                    style="@style/SettingImageAtStart"
                    android:src="@drawable/ic_theme_light" />

                <TextView
                    style="@style/SettingTextWithButton"
                    android:text="@string/settingsOptionLightTheme" />

                <ImageView
                    android:id="@+id/settingsOptionLightThemeCheck"
                    style="@style/SettingButtonCheck"
                    tools:visibility="visible" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider style="@style/SettingSeparator" />

            <LinearLayout
                android:id="@+id/settingsOptionDarkTheme"
                style="@style/MenuDrawerItem">

                <ImageView
                    style="@style/SettingImageAtStart"
                    android:src="@drawable/ic_theme_dark" />

                <TextView
                    style="@style/SettingTextWithButton"
                    android:text="@string/settingsOptionDarkTheme" />

                <ImageView
                    android:id="@+id/settingsOptionDarkThemeCheck"
                    style="@style/SettingButtonCheck"
                    tools:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
