<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/marginStandard"
    android:animateLayoutChanges="true">

    <include
        android:id="@+id/headerThread"
        layout="@layout/item_header_thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/marginStandard"
        app:layout_constraintBottom_toTopOf="@id/attachmentsLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/attachmentsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/marginStandard"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/headerThread">

        <ImageView
            android:id="@+id/attachmentsIcon"
            android:layout_width="@dimen/textHintSize"
            android:layout_height="@dimen/textHintSize"
            android:layout_marginEnd="@dimen/marginStandardSmall"
            android:src="@drawable/ic_attachment_inclined"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/attachmentsSizeText"
            style="@style/Callout.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/marginStandardSmall"
            tools:text="4 piÃ¨ces jointes (3 MB)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/attachmentsSeeAllButton"
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:text="@string/buttonSeeAll" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/attachmentsDownloadAllButton"
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonDownloadAll" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/attachmentsScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="1dp"
        android:scrollbarThumbHorizontal="@color/infomaniak"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/attachmentsLayout"
        tools:visibility="visible">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/attachmentsChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true" />

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/attachmentsScrollView">

        <WebView
            android:id="@+id/messageBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginStandardMedium" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
