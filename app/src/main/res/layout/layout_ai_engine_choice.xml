<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/fragment_ai_engine_setting">

    <com.infomaniak.mail.ui.main.settings.SettingRadioGroupView
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.infomaniak.mail.ui.main.settings.SettingRadioButtonView
            android:id="@+id/falcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_ai_engine_falcon"
            app:text="@string/aiEngineFalcon" />

        <com.infomaniak.mail.ui.main.settings.SettingRadioButtonView
            android:id="@+id/chatGpt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_ai_engine_chat_gpt"
            app:text="@string/aiEngineChatGpt" />

    </com.infomaniak.mail.ui.main.settings.SettingRadioGroupView>

    <com.infomaniak.mail.views.InformationBlockView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginStandardMedium"
        app:icon="@drawable/ic_external_information"
        app:text="@string/aiEngineWarning" />
</merge>
