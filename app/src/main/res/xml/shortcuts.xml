<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">

    <shortcut
        android:icon="@mipmap/ic_shortcut_new_message"
        android:shortcutId="newMessage"
        android:shortcutLongLabel="@string/buttonNewMessage"
        android:shortcutShortLabel="@string/buttonNewMessage">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.infomaniak.mail.ui.LaunchActivity"
            android:targetPackage="com.infomaniak.mail">
            <extra
                android:name="shortcuts_tag"
                android:value="newMessage" />
        </intent>
    </shortcut>

    <shortcut
        android:icon="@mipmap/ic_shortcut_search"
        android:shortcutId="search"
        android:shortcutLongLabel="@string/searchFolderName"
        android:shortcutShortLabel="@string/searchFolderName">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.infomaniak.mail.ui.LaunchActivity"
            android:targetPackage="com.infomaniak.mail">
            <extra
                android:name="shortcuts_tag"
                android:value="search" />
        </intent>
    </shortcut>

    <shortcut
        android:icon="@mipmap/ic_shortcut_help"
        android:shortcutId="support"
        android:shortcutLongLabel="@string/buttonHelp"
        android:shortcutShortLabel="@string/buttonHelp">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.infomaniak.mail.ui.LaunchActivity"
            android:targetPackage="com.infomaniak.mail">
            <extra
                android:name="shortcuts_tag"
                android:value="support" />
        </intent>
    </shortcut>
</shortcuts>
