<resources>

    <attr name="customGradientColor" format="color" />

    <declare-styleable name="CommonAttributes">
        <attr name="icon" format="reference" />
        <attr name="padding" format="dimension" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="text" format="string" />
        <attr name="title" format="string" />
    </declare-styleable>

    <declare-styleable name="ThemeAttributes">
        <attr name="calendarChipSelectedStrokeColor" format="color" />
    </declare-styleable>

    <declare-styleable name="DecoratedItemView">
        <attr name="badge" format="integer" />
        <attr name="icon" />
        <attr name="itemStyle" format="enum">
            <enum name="menuDrawer" value="0" />
            <enum name="other" value="1" />
        </attr>
        <attr name="maxLines" format="integer" />
        <attr name="text" />
        <attr name="textWeight" format="enum">
            <enum name="regular" value="0" />
            <enum name="medium" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BottomQuickActionBarView">
        <attr name="menu" />
    </declare-styleable>

    <declare-styleable name="MainActionsView">
        <attr name="menu" />
    </declare-styleable>

    <declare-styleable name="ActionItemView">
        <attr name="icon" />
        <attr name="padding" />
        <attr name="text" />
        <attr name="visibleDivider" format="boolean" />
        <attr name="dividerColor" format="color" />
        <attr name="staffOnly" format="boolean" />
        <attr name="keepIconTint" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AvatarView">
        <attr name="android:src" format="reference|color" />
        <attr name="inset" format="dimension" />
        <attr name="strokeColor" />
        <attr name="strokeWidth" />
    </declare-styleable>

    <declare-styleable name="AttendanceAvatarView">
        <attr name="android:src" format="reference|color" />
        <attr name="strokeColor" />
        <attr name="strokeWidth" />
        <attr name="statusBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ManyAvatarsView">
        <attr name="strokeColor" />
        <attr name="strokeWidth" />
        <attr name="statusBackgroundColor" />
    </declare-styleable>

    <declare-styleable name="ItemSettingView">
        <attr name="title" />
        <attr name="subtitle" format="string" />
        <attr name="icon" />
        <attr name="itemAction" format="enum">
            <enum name="none" value="0" />
            <enum name="chevron" value="1" />
            <enum name="toggle" value="2" />
            <enum name="openExternal" value="3" />
        </attr>
        <attr name="ripple" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SettingRadioButtonView">
        <attr name="icon" />
        <attr name="text" />
        <attr name="checkMarkColor" format="color" />
        <attr name="value" format="string" />
    </declare-styleable>

    <declare-styleable name="SettingRadioGroupView">
        <!-- The id of the view that's selected by default. Ex: @id/myRadioButton -->
        <attr name="defaultCheckedId" format="reference" />
        <!-- Defaults to false. If false, displays the classic divider used everywhere in Settings between items -->
        <attr name="ignoreDividers" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SimpleSettingView">
        <attr name="title" />
    </declare-styleable>

    <declare-styleable name="ToggleableTextFormatterItemView">
        <attr name="android:contentDescription" format="string" />
        <attr name="backgroundColor" format="color" />
        <attr name="icon" />
        <attr name="iconColor" format="color" />
        <attr name="selectedBackgroundColor" format="color" />
        <attr name="selectedIconColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MenuDrawerDropdownView">
        <attr name="actionContentDescription" format="string" />
        <attr name="collapsedByDefault" format="boolean" />
        <attr name="showIcon" format="boolean" />
        <attr name="title" />
    </declare-styleable>

    <declare-styleable name="EmptyStateView">
        <attr name="description" format="string" />
        <attr name="icon" />
        <attr name="title" />
    </declare-styleable>

    <declare-styleable name="RecipientFieldView">
        <attr name="title" />
        <attr name="canCollapseEverything" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AvatarNameEmailView">
        <attr name="avatar" format="reference|color" />
        <attr name="name" format="string" />
        <attr name="email" format="string" />
        <attr name="padding" />
        <attr name="processNameAndEmail" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MessageAlertView">
        <attr name="action1" format="string" />
        <attr name="action2" format="string" />
        <attr name="description" />
        <attr name="icon" />
    </declare-styleable>

    <declare-styleable name="InformationBlockView">
        <attr name="text" />
        <attr name="icon" />
        <attr name="showCloseIcon" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AttachmentDetailsView">
        <attr name="displayStyle" format="enum">
            <enum name="chip" value="0" />
            <enum name="bottomSheet" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BottomSheetScaffoldingView">
        <attr name="title" />
        <attr name="useDefaultLayout" format="boolean" />
        <attr name="centerHorizontally" format="boolean" />
    </declare-styleable>

</resources>
