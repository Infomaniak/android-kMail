<resources>

    <!-- Texts -->

    <style name="H1">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textSize">@dimen/h1</item>
    </style>

    <style name="H2">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textSize">@dimen/h2</item>
    </style>

    <style name="H2.Secondary">
        <item name="android:fontFamily">@font/suisseintl_regular</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="H3">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
    </style>

    <style name="Body" />

    <style name="Body.Highlighted">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textColor">@color/emphasizedTextColor</item>
    </style>

    <style name="Body.Secondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="ButtonPill">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Callout">
        <item name="android:textSize">@dimen/textHintSize</item>
    </style>

    <style name="Callout.Strong">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
    </style>

    <style name="Callout.Secondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="Callout.Tertiary">
        <item name="android:textColor">@color/hintTextColor</item>
    </style>

    <style name="Callout.Highlighted">
        <item name="android:textColor">@color/emphasizedTextColor</item>
    </style>

    <!-- Snackbar -->

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="actionTextColorAlpha">0.8</item>
        <item name="android:backgroundTint">@color/backgroundSnackbarColor</item>
        <item name="android:layout_margin">@dimen/marginStandard</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/textButtonBlueLight</item>
        <item name="android:textSize">@dimen/textHintSize</item>
    </style>

    <style name="Widget.App.SnackbarTextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/snackbarTextColor</item>
        <item name="android:textSize">@dimen/textHintSize</item>
    </style>

    <!-- Buttons -->

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/emphasizedTextColor</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/textHintSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">16dp</item>
        <item name="iconTint">@color/iconColor</item>
    </style>

    <!-- Cardview -->

    <style name="CardViewMail" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/backgroundColor</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item> <!-- Shadow remove feature, awaiting approve -->
    </style>

    <style name="CardviewTopRounded" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/backgroundColor</item>
        <item name="shapeAppearanceOverlay">@style/CardviewTopRounded.ShapeAppearance</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="CardviewTopRounded.ShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/materialCardviewRadius</item>
        <item name="cornerSizeTopLeft">@dimen/materialCardviewRadius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Other -->

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="NavigationDrawerMail" parent="ThemeOverlay.Material3.NavigationView">
        <item name="android:backgroundTint">@color/backgroundColor</item>
        <item name="dividerInsetEnd">@dimen/marginLarge</item>
        <item name="dividerInsetStart">@dimen/marginStandard</item>
        <item name="itemHorizontalPadding">@dimen/marginStandard</item>
        <item name="itemIconPadding">@dimen/marginStandard</item>
        <item name="itemIconTint">@color/infomaniak</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="subheaderInsetStart">@dimen/marginStandard</item>
        <item name="subheaderInsetEnd">@dimen/marginStandard</item>
        <item name="subheaderTextAppearance">@style/Callout.Tertiary</item>
    </style>

</resources>
