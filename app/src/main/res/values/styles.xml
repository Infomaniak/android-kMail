<resources>

    <!-- Text styles -->

    <style name="H1">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="H2">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BodyMedium">
        <item name="android:fontFamily">@font/suisseintl_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BodyMedium.Accent">
        <item name="android:textColor">?android:attr/colorPrimary</item>
    </style>

    <style name="BodyMedium.Tertiary">
        <item name="android:textColor">@color/tertiaryTextColor</item>
    </style>

    <!-- BodyMedium.OnAccent is only used on FABs, see ExtendedFloatingActionButtonStyle -->

    <style name="BodyMedium.Error">
        <item name="android:textColor">@color/redDestructiveAction</item>
    </style>

    <style name="Body">
        <item name="android:fontFamily">@font/suisseintl_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body.Secondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="Body.Tertiary">
        <item name="android:textColor">@color/tertiaryTextColor</item>
    </style>

    <style name="Body.Error">
        <item name="android:textColor">@color/redDestructiveAction</item>
    </style>

    <style name="BodySmallMedium">
        <item name="android:fontFamily">@font/suisseintl_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BodySmallMedium.Accent">
        <item name="android:textColor">?android:attr/colorPrimary</item>
    </style>

    <!-- BodySmallMedium.OnAccent is only used in read/unread chip, see R.id.unreadCountChip -->

    <style name="BodySmall">
        <item name="android:fontFamily">@font/suisseintl_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- BodySmall.Accent is only used on attachment download all button and the name of detailed recipients of a mail.
    See attachmentsDownloadAllButton, item_detailed_contact and TextButton -->

    <style name="BodySmall.Secondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="BodySmall.Tertiary">
        <item name="android:textColor">@color/tertiaryTextColor</item>
    </style>

    <style name="BodySmall.Warning">
        <item name="android:textColor">@color/orangeWarning</item>
    </style>

    <style name="LabelMedium">
        <item name="android:fontFamily">@font/suisseintl_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LabelMedium.Accent">
        <item name="android:textColor">?android:attr/colorPrimary</item>
    </style>

    <!-- LabelMedium.Secondary is only used in QuickBottomActionBar, see QuickBottomActionBarButton -->

    <style name="Label">
        <item name="android:fontFamily">@font/suisseintl_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Label.Secondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>


    <!-- Snackbar -->

    <style name="SnackbarStyle" parent="Widget.Material3.Snackbar">
        <item name="android:layout_margin">@dimen/marginStandard</item>
    </style>

    <style name="SnackbarButtonStyle" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:fontFamily">@font/suisseintl_medium</item>>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SnackbarTextViewStyle" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textSize">14sp</item>
    </style>


    <!-- Buttons -->

    <style name="TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_color_disabled</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">@dimen/textButtonCornerRadius</item>
        <item name="iconPadding">@dimen/marginStandardSmall</item>
    </style>

    <style name="TextButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/textButtonPrimaryHeight</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:maxWidth">500dp</item>
        <item name="android:minWidth">130dp</item>
        <item name="android:paddingLeft">@dimen/marginStandard</item>
        <item name="android:paddingRight">@dimen/marginStandard</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/on_primary_color_disabled</item>
        <item name="backgroundTint">@color/primary_color_disabled</item>
        <item name="cornerRadius">@dimen/textButtonCornerRadius</item>
        <item name="fontFamily">@font/suisseintl_medium</item>
        <item name="layout_constraintWidth_max">500dp</item>
    </style>

    <style name="TextButtonError" parent="TextButtonPrimary">
        <item name="android:textColor">@color/redDestructiveAction</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/redDestructiveActionTransparent</item>
    </style>

    <style name="TextButtonSecondary" parent="TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/suisseintl_medium</item>
    </style>

    <style name="TextButtonPrimaryMedium" parent="TextButtonPrimary">
        <item name="android:layout_height">@dimen/textButtonPrimaryMediumHeight</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">@dimen/mediumButtonHorizontalMargin</item>
        <item name="android:paddingRight">@dimen/mediumButtonHorizontalMargin</item>
    </style>

    <style name="TextButtonSecondaryMedium" parent="TextButtonSecondary">
        <item name="android:layout_height">@dimen/textButtonPrimaryMediumHeight</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">@dimen/mediumButtonHorizontalMargin</item>
        <item name="android:paddingRight">@dimen/mediumButtonHorizontalMargin</item>
    </style>

    <style name="TextButtonAlerts" parent="TextButtonSecondary">
        <item name="android:fontFamily">@font/suisseintl_regular</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingEnd">@dimen/marginStandardMedium</item>
        <item name="android:paddingStart">@dimen/marginStandardMedium</item>
        <item name="android:paddingTop">@dimen/marginStandardVerySmall</item>
        <item name="android:paddingBottom">@dimen/marginStandardVerySmall</item>
        <item name="android:textColor">@color/blueMail</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">@dimen/smallCornerRadius</item>
        <item name="rippleColor">@color/ripple_color_blue_mail</item>
    </style>

    <style name="IconButtonSmall" parent="Widget.Material3.Button.TextButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_height">@dimen/iconButtonSize</item>
        <item name="android:layout_width">@dimen/iconButtonSize</item>
        <item name="cornerRadius">@dimen/roundCornerRadius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/mediumIconSize</item>
        <item name="iconTint">@color/iconColor</item>
    </style>

    <style name="IconButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:insetBottom">@dimen/marginStandardVerySmall</item>
        <item name="android:insetLeft">@dimen/marginStandardVerySmall</item>
        <item name="android:insetRight">@dimen/marginStandardVerySmall</item>
        <item name="android:insetTop">@dimen/marginStandardVerySmall</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="cornerRadius">@dimen/roundCornerRadius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/marginStandard</item>
        <item name="iconTint">@color/icon_button_primary_color</item>
    </style>

    <style name="EditorIconButton" parent="IconButtonSmall">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">10sp</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconSize">24dp</item>
        <item name="layout_constraintWidth_max">64dp</item>
        <item name="rippleColor">?android:attr/colorControlHighlight</item>
    </style>

    <style name="QuickBottomActionBarButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:fontFamily">@font/suisseintl_medium</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_color_disabled</item>
        <item name="android:textSize">12sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="iconGravity">textTop</item>
        <item name="iconPadding">@dimen/marginStandardSmall</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/primary_color_disabled</item>
        <item name="layout_constraintWidth_max">120dp</item>
    </style>

    <style name="DetailedContactButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">@dimen/marginStandardMedium</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconPadding">@dimen/marginStandardMedium</item>
        <item name="iconSize">@dimen/marginStandard</item>
    </style>


    <!-- Cardview -->

    <style name="CardViewMail" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/backgroundColor</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="cardElevation">0dp</item> <!-- Shadow remove feature, awaiting approve -->
    </style>

    <style name="BackdropCardview" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardBackgroundColor">@color/backgroundColor</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">6dp</item>
        <item name="shapeAppearanceOverlay">@style/BackgroundCardviewShapeAppearance</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="BackgroundCardviewShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <!-- MenuDrawer -->

    <style name="RoundedDecoratedTextItem" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_height">@dimen/decoratedItemViewHeight</item>
        <item name="android:layout_marginStart">@dimen/marginStandardSmall</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="shapeAppearanceOverlay">@style/RoundedDecoratedTextItemShapeAppearance</item>
    </style>

    <style name="RoundedDecoratedTextItemShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <!-- Chips -->

    <style name="ChipNoCheckedIconBase" parent="Widget.Material3.Chip.Input">
        <item name="checkedIcon">@null</item>
        <item name="checkedIconEnabled">false</item>
        <item name="chipCornerRadius">@dimen/roundCornerRadius</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="ChipNoIcons" parent="ChipNoCheckedIconBase">
        <item name="closeIcon">@null</item>
        <item name="closeIconEnabled">false</item>
    </style>

    <style name="EmailAddressChip" parent="ChipNoIcons">
        <item name="android:textColor">@color/chip_contact_text_color</item>
        <item name="chipBackgroundColor">@color/chip_contact_background_color</item>
    </style>

    <style name="SearchFilterChip" parent="ChipNoIcons">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/chip_unread_text_color</item>
        <item name="checkedIcon">@drawable/ic_check_sharp</item>
        <item name="checkedIconTint">?attr/colorOnPrimary</item>
        <item name="chipBackgroundColor">@color/chip_unread_background</item>
        <item name="chipIconSize">18dp</item>
        <item name="chipStrokeColor">?attr/colorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="closeIconEndPadding">@dimen/marginStandardSmall</item>
        <item name="closeIconSize">@dimen/alternativeMargin</item>
        <item name="closeIconTint">@color/chip_unread_text_color</item>
        <item name="iconStartPadding">@dimen/marginStandardSmall</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="UnreadChip" parent="ChipNoCheckedIconBase">
        <item name="android:textColor">@color/chip_unread_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="chipBackgroundColor">@color/chip_unread_background</item>
        <item name="closeIcon">@drawable/ic_close_small</item>
        <item name="closeIconEndPadding">@dimen/marginStandardSmall</item>
        <item name="closeIconSize">@dimen/smallIconSize</item>
        <item name="closeIconTint">?attr/colorOnPrimary</item>
    </style>

    <!-- Bottom sheet -->

    <style name="BottomSheetDialogThemeBase" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetDialogThemeModalStyle</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BottomSheetDialogThemeBase" />

    <style name="BottomSheetDialogThemeModalStyle" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/backgroundColorSecondary</item>
        <item name="shapeAppearanceOverlay">@style/BottomSheetDialogThemeShapeAppearanceOverlay</item>
    </style>

    <style name="BottomSheetDialogThemeShapeAppearanceOverlay">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>

    <style name="BottomSheetTitle" parent="BodyMedium" />


    <!-- Settings -->

    <style name="SettingHeader" parent="BodySmall.Secondary">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/marginStandardSmall</item>
        <item name="android:paddingEnd">@dimen/marginStandardMedium</item>
        <item name="android:paddingStart">@dimen/marginStandardMedium</item>
        <item name="android:paddingTop">@dimen/marginStandardMedium</item>
    </style>

    <style name="SettingButtonToggle" parent="BodyMedium">
        <item name="android:backgroundTint">@color/button_toggle_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="strokeColor">?android:attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Default styles -->

    <style name="ToggleableTextFormatterItemView">
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="iconColor">@color/toggleableTextFormatterBackgroundColor</item>
        <item name="selectedBackgroundColor">@color/toggleableTextFormatterBackgroundColor</item>
        <item name="selectedIconColor">@color/backgroundCardview</item>
    </style>


    <!-- Dialog -->

    <style name="DialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/DeletePositiveButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="colorControlNormal">?attr/colorControlNormal</item>
        <item name="colorSurface">@color/backgroundColorTertiary</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlayDialogRounded</item>
    </style>

    <style name="PositiveButtonStyle" parent="TextButtonPrimaryMedium" />

    <style name="DeletePositiveButtonStyle" parent="TextButtonSecondaryMedium">
        <item name="android:layout_marginEnd">@dimen/marginStandardVerySmall</item>
    </style>

    <style name="ShapeAppearanceOverlayDialogRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- SearchBar -->

    <style name="SearchTextInputLayoutStyle">
        <item name="boxStrokeColor">@null</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="endIconDrawable">@drawable/ic_close_search</item>
        <!-- The endIconMode down here got its clear function overriden in the code,
        but we keep it because it provides a system contentDescription -->
        <item name="endIconMode">clear_text</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="SearchTextInputEditTextStyleBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawableStart">@drawable/ic_search_small</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">textFilter</item>
        <item name="android:lines">1</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColorHint">@color/tertiaryTextColor</item>
    </style>

    <style name="SearchTextInputEditTextStyle" parent="SearchTextInputEditTextStyleBase" />

    <!-- Divider -->

    <style name="ItemDivider">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/dividerHorizontalPadding</item>
        <item name="android:layout_marginStart">@dimen/dividerHorizontalPadding</item>
        <item name="dividerColor">@color/dividerColor</item>
    </style>

    <style name="MenuDrawerDivider" parent="Widget.Material3.MaterialDivider">
        <item name="android:layout_marginTop">@dimen/marginStandardSmall</item>
        <item name="android:layout_marginBottom">@dimen/marginStandardSmall</item>
        <item name="dividerColor">@color/dividerColor</item>
        <item name="dividerInsetStart">@dimen/marginStandardSmall</item>
    </style>

    <!-- AI -->

    <style name="AiCursorAndPrimaryColorTheme">
        <item name="colorControlActivated">@color/aiColor</item>
        <item name="colorOnPrimary">@color/onAiColor</item>
        <item name="colorPrimary">@color/aiColor</item>
    </style>

    <style name="AiCardView" parent="CardViewMail">
        <item name="cardBackgroundColor">@color/backgroundColorSecondary</item>
        <item name="cardCornerRadius">@null</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="shapeAppearanceOverlay">@style/BottomSheetDialogThemeShapeAppearanceOverlay</item>
    </style>

    <!-- Other -->

    <style name="ExtendedFloatingActionButtonStyle" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="android:fontFamily">@font/suisseintl_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="iconGravity">start</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="materialThemeOverlay">@style/FloatingActionButtonThemeOverlay</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="materialThemeOverlay">@style/FloatingActionButtonThemeOverlay</item>
    </style>

    <style name="FloatingActionButtonThemeOverlay">
        <item name="colorContainer">?android:attr/colorPrimary</item>
        <item name="colorOnContainer">?attr/colorOnPrimary</item>
    </style>

    <style name="EmailAddressTextView">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="EditorIconRoundedBackground">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/tertiaryTextColor</item>
        <item name="boxStrokeColor">@color/text_input_layout_box_color</item>
        <item name="boxStrokeErrorColor">@color/redDestructiveAction</item>
        <item name="boxBackgroundColor">@color/backgroundColorTertiary</item>
    </style>

    <style name="ListPopupMenuStyle" parent="Widget.Material3.PopupMenu.ListPopupWindow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:popupBackground">@color/backgroundColorTertiary</item>
    </style>

    <style name="PopupWindowStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:overlapAnchor">true</item>
        <item name="android:popupBackground">@drawable/background_popup</item>
    </style>

</resources>
