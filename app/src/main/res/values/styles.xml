<resources>

    <!-- Text -->
    <style name="h1">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="h2">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="h2Secondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
    </style>

    <style name="bodySecondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="bodyHighlighted">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textColor">@color/infomaniak</item>
    </style>

    <style name="highlightedText">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="buttonPill">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="callout">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="calloutStrong">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="calloutSecondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="calloutTertiary">
        <item name="android:textColor">@color/hintTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="calloutHighlighted">
        <item name="android:textColor">@color/infomaniak</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Snackbar-->

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="actionTextColorAlpha">0.8</item>
        <item name="android:backgroundTint">@color/backgroundSnackBarColor</item>
        <item name="android:layout_margin">@dimen/marginStandard</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/primaryLight</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.App.SnackbarTextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/snackbarTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!--Buttons-->

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/infomaniak</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">16dp</item>
        <item name="iconTint">@color/iconColor</item>
    </style>

    <!--Other-->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
