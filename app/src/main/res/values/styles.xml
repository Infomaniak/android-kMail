<resources>

    <style name="AppTheme" parent="AppThemeBase" />

    <!-- Text -->
    <style name="headerText">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="primaryText">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="primaryTextHighlighted">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="secondaryText">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="highlightedText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="menuItemText">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="menuItemTextSelected">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textColor">@color/infomaniak</item>
    </style>

    <style name="menuTitleText">
        <item name="android:textColor">@color/sectionHeaderTextColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="badgeText">
        <item name="android:textColor">@color/infomaniak</item>
    </style>

    <style name="smallActionText">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textColor">@color/infomaniak</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="descriptionText">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="hintText">
        <item name="android:textColor">@color/hintTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Snackbar-->

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="actionTextColorAlpha">0.8</item>
        <item name="android:backgroundTint">@color/backgroundSnackBarColor</item>
        <item name="android:layout_margin">@dimen/marginStandard</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/primaryLight</item>
    </style>

    <style name="Widget.App.SnackbarTextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/snackBarTextColor</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
