<resources>

    <!-- Texts -->

    <style name="H1">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="H2">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="H2.Secondary">
        <item name="android:fontFamily">@font/suisseintl_regular</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="H3">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
    </style>

    <style name="Body" />

    <style name="Body.Highlighted">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
    </style>

    <style name="Body.Secondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="ButtonPill">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Callout">
        <item name="android:textSize">@dimen/textHintSize</item>
    </style>

    <style name="Callout.Strong">
        <item name="android:fontFamily">@font/suisseintl_semibold</item>
    </style>

    <style name="Callout.Secondary">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="Callout.Tertiary">
        <item name="android:textColor">@color/hintTextColor</item>
    </style>

    <style name="Callout.Highlighted">
        <item name="android:textColor">?android:attr/colorPrimary</item>
    </style>

    <style name="Callout.Highlighted.Strong">
        <item name="fontFamily">@font/suisseintl_semibold</item>
    </style>

    <!-- Snackbar -->

    <style name="Widget.App.Snackbar" parent="Widget.Material3.Snackbar">
        <item name="actionTextColorAlpha">0.8</item>
        <item name="android:backgroundTint">@color/backgroundSnackbarColor</item>
        <item name="android:layout_margin">@dimen/marginStandard</item>
    </style>

    <style name="Widget.App.SnackbarButton" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/textButtonBlueLight</item>
        <item name="android:textSize">@dimen/textHintSize</item>
    </style>

    <style name="Widget.App.SnackbarTextView" parent="Widget.Material3.Snackbar.TextView">
        <item name="android:textColor">@color/snackbarTextColor</item>
        <item name="android:textSize">@dimen/textHintSize</item>
    </style>

    <!-- Buttons -->

    <style name="TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
        <item name="android:textSize">@dimen/textHintSize</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="TextButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:maxWidth">500dp</item>
        <item name="android:minWidth">130dp</item>
        <item name="android:paddingLeft">@dimen/marginStandard</item>
        <item name="android:paddingRight">@dimen/marginStandard</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">@color/primary_button_background_color</item>
        <item name="cornerRadius">10dp</item>
        <item name="fontFamily">@font/suisseintl_medium</item>
        <item name="layout_constraintWidth_max">500dp</item>
    </style>

    <style name="TextButtonPrimary.Error">
        <item name="android:textColor">@color/redDestructiveAction</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="fontFamily">@font/suisseintl_semibold</item>
        <item name="rippleColor">@color/redDestructiveActionTransparent</item>
    </style>

    <style name="IconButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_height">@dimen/iconButtonSize</item>
        <item name="android:layout_width">@dimen/iconButtonSize</item>
        <item name="cornerRadius">@dimen/roundCornerRadius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">16dp</item>
        <item name="iconTint">@color/iconColor</item>
    </style>

    <style name="EditorIconButton" parent="IconButton">
        <item name="cornerRadius">0dp</item>
        <item name="iconSize">20dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="rippleColor">?android:attr/colorControlHighlight</item>
    </style>

    <!-- Cardview -->

    <style name="CardViewMail" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/backgroundColor</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="cardElevation">0dp</item> <!-- Shadow remove feature, awaiting approve -->
    </style>

    <style name="BackgroundCardview" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/backgroundColor</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">6dp</item>
        <item name="shapeAppearanceOverlay">@style/BackgroundCardviewShapeAppearance</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="BackgroundCardviewShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- MenuDrawer -->

    <style name="MenuDrawerBadge" parent="Callout.Highlighted">
        <item name="android:gravity">center</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
    </style>

    <style name="MenuDrawerDivider" parent="Widget.Material3.MaterialDivider">
        <item name="android:layout_marginTop">@dimen/marginStandardSmall</item>
        <item name="android:layout_marginBottom">@dimen/marginStandardSmall</item>
        <item name="dividerColor">@color/separatorColor</item>
        <item name="dividerInsetEnd">@dimen/marginStandard</item>
        <item name="dividerInsetStart">@dimen/marginStandard</item>
    </style>

    <style name="MenuDrawerItem" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_height">@dimen/menuDrawerItemViewHeight</item>
        <item name="android:layout_marginStart">@dimen/marginStandardSmall</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingEnd">@dimen/marginStandard</item>
        <item name="android:paddingStart">@dimen/marginStandard</item>
        <item name="cardBackgroundColor">@color/backgroundColor</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <item name="shapeAppearanceOverlay">@style/MenuDrawerItem.ShapeAppearance</item>
    </style>

    <style name="MenuDrawerItem.ShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="MenuDrawerItemSelected" parent="MenuDrawerItem">
        <item name="cardBackgroundColor">?attr/colorPrimaryContainer</item>
    </style>

    <style name="MenuDrawerItemText">
        <item name="android:drawablePadding">@dimen/marginStandard</item>
        <item name="android:drawableTint">?android:attr/colorPrimary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:maxLines">2</item>
        <item name="drawableStartCompat">@drawable/ic_folder</item>
    </style>

    <!-- Chips -->

    <style name="EmailAddressChip" parent="Widget.Material3.Chip.Input">
        <item name="android:textColor">@color/emailChipTextColor</item>
        <item name="checkedIcon">@null</item>
        <item name="checkedIconEnabled">false</item>
        <item name="chipBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="chipCornerRadius">100dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="closeIcon">@null</item>
        <item name="closeIconEnabled">false</item>
    </style>

    <style name="UnreadChip" parent="Widget.Material3.Chip.Input">
        <item name="android:textColor">@color/chip_unread_text_color</item>
        <item name="checkedIcon">@null</item>
        <item name="checkedIconEnabled">false</item>
        <item name="chipBackgroundColor">@color/chip_unread_background</item>
        <item name="chipCornerRadius">100dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="closeIconTint">?attr/colorOnPrimary</item>
    </style>

    <!-- Bottom sheet -->

    <style name="BottomSheetDialogTheme.Base" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetDialogTheme.ModalStyle</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BottomSheetDialogTheme.Base" />

    <style name="BottomSheetDialogTheme.ModalStyle" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/backgroundColor</item>
        <item name="shapeAppearanceOverlay">@style/BottomSheetDialogTheme.ShapeAppearanceOverlay</item>
    </style>

    <style name="BottomSheetDialogTheme.ShapeAppearanceOverlay">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>

    <!-- Settings -->

    <style name="SettingSeparator" parent="MenuDrawerDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingHeader" parent="Callout.Tertiary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingStart">@dimen/marginStandard</item>
        <item name="android:paddingEnd">@dimen/marginStandard</item>
        <item name="android:paddingTop">@dimen/marginStandardSmall</item>
        <item name="android:paddingBottom">@dimen/marginStandardSmall</item>
    </style>

    <style name="SettingText" parent="MenuDrawerItem">
        <item name="android:gravity">center|start</item>
    </style>

    <style name="SettingImageAtStart">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">@dimen/marginStandard</item>
    </style>

    <style name="SettingTextWithButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Setting2TextsWithButton" parent="SettingTextWithButton">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingText1Of2WithButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingText2Of2WithButton" parent="Callout.Secondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingButtonChevron">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:rotation">@dimen/angleViewRotated</item>
        <item name="android:src">@drawable/ic_chevron_left</item>
    </style>

    <style name="SettingButtonCheck">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:src">@drawable/ic_check</item>
        <item name="android:tint">@color/buttonToggleStroke</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="SettingButtonSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingButtonToggle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/textHintSize</item>
        <item name="android:backgroundTint">@color/button_toggle_background</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/buttonToggleStroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Other -->

    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorContainer">?android:attr/colorPrimary</item>
        <item name="colorOnContainer">?attr/colorOnPrimary</item>
    </style>

    <style name="EmailAddressTextView">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
